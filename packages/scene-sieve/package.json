{
  "name": "@lumy-pack/scene-sieve",
  "version": "0.0.3",
  "description": "CLI tool for extracting key frames from video and GIF files",
  "keywords": [
    "cli",
    "video",
    "frames",
    "scene",
    "ffmpeg",
    "opencv"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vincent-kk/lumy-pack.git",
    "directory": "packages/scene-sieve"
  },
  "license": "MIT",
  "author": {
    "name": "Vincent K. Kelvin",
    "email": "lunox273@gmail.com"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "source": "./src/index.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": "./dist/cli.mjs",
  "files": [
    "dist",
    "!dist/tsconfig.tsbuildinfo"
  ],
  "scripts": {
    "build": "tsup && yarn build:types",
    "build:types": "tsc -p ./tsconfig.declarations.json",
    "dev": "tsx src/cli.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "publish:npm": "yarn npm publish --access public",
    "test": "vitest",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:run": "vitest run",
    "version:major": "yarn version major",
    "version:minor": "yarn version minor",
    "version:patch": "yarn version patch"
  },
  "dependencies": {
    "@ffprobe-installer/ffprobe": "^1.4.1",
    "@techstark/opencv-js": "4.12.0-release.1",
    "cli-progress": "^3.12.0",
    "commander": "^12.1.0",
    "execa": "^9.5.0",
    "ffmpeg-static": "^5.2.0",
    "ora": "^8.0.0",
    "picocolors": "^1.1.1",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^3.2.4"
  }
}
